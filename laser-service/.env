# ===========================================
# API Service Configuration
# ===========================================

# API server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
API_HOST=0.0.0.0

# API server port
API_PORT=8080

# Logging level (debug, info, warning, error)
LOG_LEVEL=info

# ===========================================
# Database Configuration
# ===========================================

# Database API base URL (PostgREST endpoint)
DATABASE_API_URL=https://api.navitrak.ai

# ===========================================
# Laser Device Configuration
# ===========================================

# Host where laser devices are located
# For Docker: use container name (laser-simulator)
# For local: use localhost or specific IP
LASER_BRIDGE_HOST=laser-service

# Laser device ports (comma-separated for multiple ports)
LASER_PORTS=2030,2031

# Laser communication timeout (seconds)
LASER_API_LASER_TIMEOUT=1.0

# Heartbeat interval for device health checking (seconds)
LASER_API_HEARTBEAT_INTERVAL=5.0

# Connection retry interval (seconds)
LASER_API_CONNECTION_RETRY_INTERVAL=10.0

# Maximum connection retries before marking device as failed
LASER_API_MAX_CONNECTION_RETRIES=3

# Laser device logging level
LASER_API_LOG_LEVEL=INFO

# ===========================================
# Simulator Configuration
# ===========================================

# Port for the laser simulator
SIMULATOR_PORT=2030

# ===========================================
# Frontend Configuration
# ===========================================

# Frontend host (localhost for local access, 0.0.0.0 for all interfaces)
FRONTEND_HOST=localhost

# Frontend port (Vue.js dev server)
FRONTEND_PORT=3000

# ===========================================
# Docker Deployment Examples
# ===========================================

# For separated services (simulator + api):
# LASER_BRIDGE_HOST=laser-simulator

# For all-in-one deployment:
# LASER_BRIDGE_HOST=localhost

# ===========================================
# Production Examples
# ===========================================

# High-performance settings:
# LASER_API_LASER_TIMEOUT=0.5
# LASER_API_HEARTBEAT_INTERVAL=2.0
# LASER_API_CONNECTION_RETRY_INTERVAL=5.0
# LOG_LEVEL=warning

# Development settings:
# LASER_API_LASER_TIMEOUT=2.0
# LASER_API_HEARTBEAT_INTERVAL=10.0
# LOG_LEVEL=debug